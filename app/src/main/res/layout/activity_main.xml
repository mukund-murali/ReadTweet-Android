<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="Save Time by not reading tweets you won't want to read from the people you follow."
            android:gravity="center"
            android:textSize="@dimen/text_sub_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Tell the system tweets you don't like. It learns. From next time, tweets like that will be eliminated from your feed."
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/content_gutter"
            android:textSize="@dimen/text_regular"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_know_more"
            android:layout_marginTop="@dimen/content_gutter"
            android:text="Know more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/content_gutter_2x"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
